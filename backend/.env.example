# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (Supabase PostgreSQL)
# Choose one of the connection modes based on your needs:

# Option 1: Session Pooler (Recommended for free tier - persistent connections)
# Use port 5432 for session pooler mode
# IMPORTANT: Add ?sslmode=require for Supabase connections
DATABASE_URL=postgresql+psycopg2://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-ap-south-1.pooler.supabase.com:5432/postgres?sslmode=require

# Option 2: Transaction Pooler (For serverless - connection pooling)
# Use port 6543 for transaction pooler mode
# DATABASE_URL=postgresql+psycopg2://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-ap-south-1.pooler.supabase.com:6543/postgres?sslmode=require

# Individual Database Connection Parameters (Alternative)
DB_USER=postgres.[PROJECT_REF]
DB_PASSWORD=[YOUR_PASSWORD]
DB_HOST=aws-1-ap-south-1.pooler.supabase.com
DB_PORT=5432  # Use 6543 for transaction pooler
DB_NAME=postgres

# JWT & Security
SECRET_KEY=your-secret-key-here-change-this
JWT_SECRET=your-jwt-secret-here-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=development

# CORS (Add your frontend URL)
FRONTEND_URL=http://localhost:5173
