# Frontend Environment Variables (Vite)
# Copy this file to .env and fill values (do NOT commit secrets to git).

# ===== BACKEND API CONFIGURATION =====
# The base URL of your backend API (no trailing slash)
# For local development, use http://localhost:8000
# For production, use your deployed backend URL
VITE_API_URL=http://localhost:8000

# GraphQL Endpoint (relative to VITE_API_URL)
VITE_GRAPHQL_ENDPOINT=/api/graphql

# ===== APPLICATION SETTINGS =====
# App name and description
VITE_APP_NAME=CanteenX
VITE_APP_DESCRIPTION="Smart Campus Canteen Management System"

# ===== FEATURE FLAGS =====
# Enable/disable features during development
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=false

# ===== PAYMENT CONFIGURATION =====
# Razorpay (for production, use actual keys)
VITE_RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID

# ===== ENVIRONMENT =====
VITE_ENVIRONMENT=development
